<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testRecordStringTitle"
                android:padding="25dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#0A7B3D"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testRecordStringDescription"
                android:textColor="#000"
                android:textSize="18sp"
                android:padding="25dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="এক দিনের রেকর্ড সমূহ ( ১৯৯৭ সাল থেকে ) "
                android:padding="25dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#0A7B3D"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testRecordStringDescription"
                android:textColor="#000"
                android:textSize="18sp"
                android:padding="25dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="টি ২০ রেকর্ড সমূহ ( ২০০৬ সাল থেকে )"
                android:padding="25dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#0A7B3D"
                android:textColor="#fff"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testRecordStringDescription"
                android:textColor="#000"
                android:textSize="18sp"
                android:padding="25dp"
                />

        </LinearLayout>



    </LinearLayout>

</ScrollView>
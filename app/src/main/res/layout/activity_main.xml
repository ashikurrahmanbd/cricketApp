<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayoutId"
    tools:context=".MainActivity">


    <!--  Main Activity layout   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="3"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:gravity="center"
            android:weightSum="2"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/dateTimeId"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"

                android:foreground="?android:selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/dateicon"
                        android:padding="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="খেলার সময়"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--  Second CardView  -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/temMemberId"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="4dp"

                android:foreground="?android:selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/team"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="দলের সদস্য"

                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!--  Second CardView Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:gravity="center"
            android:weightSum="2"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/liveScoreId"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"

                android:foreground="?android:selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/score"
                        android:padding="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="লাইভ স্কোর"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--  Second CardView  -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/liveTVId"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="4dp"

                android:foreground="?android:selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/live"
                        android:padding="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="লাইভ টিভি"
                        android:layout_marginTop="10dp"

                        android:textSize="18sp"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!--    End Second CardView Row    -->

        <!--   Start third CardView Row     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:gravity="center"
            android:weightSum="2"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/statisticsId"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="4dp"
                android:layout_margin="10dp"

                android:foreground="?android:selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/chart"
                        android:padding="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="পরিসংখ্যান"
                        android:textSize="18sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--  Second CardView  -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/stadiumId"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:clickable="true"
                app:cardCornerRadius="4dp"

                android:foreground="?android:selectableItemBackground"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/stadium"
                        android:padding="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circlebackground"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="স্টেডিয়াম পরিচিতি"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <!--  End Third CardView Row   -->


    </LinearLayout>
    <!--  Main Activity layout   -->

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nagivationViewId"
        app:menu="@menu/menu_layout"
        app:headerLayout="@layout/nav_header"
        android:layout_gravity="start"
        >


    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>

